for player in 1 2
  .pokemons-atacked-{player}
    .pokemon.player-{player}
      if player < 2
        animation atacked-player-1 1s
      else
        animation atacked-player-2 1s

  .pokemons-posion-{player}
    .pokemon.player-{player}
      animation posion 2s
      animation-delay 0.5s

  .pokemons-damage-{player}
    .pokemon.player-{player}
      animation damage-player 1s
      animation-delay 0.5s

//Ataque bÃ¡sico
@keyframes atacked-player-1
  0%
    transform translate(0, 0) scale(1)

  30%
    transform translate(-30px, 30px) scale(1.2)

  50%
    transform translate(60px, -30px) scale(0.8)

  100%
    transform translate(0, 0) scale(1)

@keyframes atacked-player-2
  0%
    transform translate(0, 0) scale(1)

  30%
    transform translate(10px, -10px) scale(0.9)

  50%
    transform translate(-10px, 10px) scale(1.1)

  100%
    transform translate(0, 0) scale(1)

//Ataque de veneno
