.pokemon-bar
  background-color white
  box-shadow -1px -1px 3px rgba(0,0,0,0.2)
  display table
  padding 10px 50px
  margin 20px auto 10px 0
  transform skew(30deg, 0) translate(-20px, 0)

  &>div
    transform skew(-30deg, 0)
    min-width 300px
    display flex
    flex-wrap wrap

    h2
      text-transform uppercase
      font-size 16px

    .status
      display inline-table
      padding 0px 8px 2px
      background-color: lightgray
      margin 0 0 2px 10px
      font-size 12px
      border-radius 20px
      text-transform capitalize

      &.poison
        background-color #cf9ce4
      &.confusion
        background-color #f9b7b4
      &.burn
        background-color #ffc39c
      &.paralysis
        background-color #ffed88

    p:not(.status)
      flex auto
      text-align right

    &>div
      width 100%
      height 10px
      background-color #66615E
      position relative

      &>p
        min-width max-width

      &>span
        background-color #15F700
        width 100%
        height 100%
        position absolute
        top 0
        left 0
        transform-origin left bottom
        transform: scaleX(1);

  &.player-2
    transform skew(-30deg, 0) translate(20px, 0)
    margin 0 0 10px 0

    &>div
      transform skew(30deg, 0)

.trocar-pokemon
  flex auto
  padding 0 10px
  margin-left 10px
  border-left solid 1px white

  h3
    color white
    text-shadow 1px 1px 0 black

  ul
    display flex

    li
      max-width 50px
      transition 1s

      &.disable
        opacity 1
        filter grayscale(0) drop-shadow(2px 0px 0px white)  drop-shadow(-2px 0px 0px white) drop-shadow(0px 2px 0px white)  drop-shadow(0px -2px 0px white)
        transform scale(1.1)


      &.pokemon-fainted
        opacity 0.5
        filter grayscale(1)
        transform scale(0.8)

      &.seletor-pokemon
        opacity 1
        filter grayscale(0)
        cursor pointer

        &:hover
          filter grayscale(0) drop-shadow(2px 0px 0px white)  drop-shadow(-2px 0px 0px white) drop-shadow(0px 2px 0px white)  drop-shadow(0px -2px 0px white)
nav
  width 100%
  overflow auto
  position relative
  transition 0.5s

  &.no-move
    opacity 0.5
    transform scale(0.8)

    &>div
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      z-index 3

  ul
    display flex
    min-width max-width

    li
      flex 0 0 max-width
      min-width max-width
      padding 10px
      display grid

      div
        display flex
        overflow hidden
        background white
        border-radius 60px
        font-size 16px
        justify-content space-between
        min-width 250px
        background-size auto 80%
        background-image url('assets/img/types/3.png')
        background-position 5px 3px
        background-repeat no-repeat
        -webkit-text-stroke: 0.5px;
        box-shadow 1px 1px 5px 0 rgba(0, 0, 0, 0.5)
        transition 0.5s
        cursor pointer

        &.bug
          background-color #A2D438
          background-image url('assets/img/types/1.png')

        &.ghost
          background-color #5E64D0
          background-image url('assets/img/types/2.png')

        &.ice
          background-color #62CCD4
          background-image url('assets/img/types/4.png')

        &.dragon
          background-color #5088BC
          background-image url('assets/img/types/5.png')

        &.flying
          background-color #507CD4
          background-image url('assets/img/types/6.png')

        &.ground
          background-color #E88244
          background-image url('assets/img/types/7.png')

        &.grass
          background-color #40D070
          background-image url('assets/img/types/8.png')

        &.fairy
          background-color #FF84E6
          background-image url('assets/img/types/9.png')

        &.electric
          background-color #F6D830
          background-image url('assets/img/types/10.png')

        &.poison
          background-color #BC52E8
          background-image url('assets/img/types/11.png')

        &.steel
          background-color #5EA0B2
          background-image url('assets/img/types/12.png')

        &.psychic
          background-color #FF8882
          background-image url('assets/img/types/13.png')

        &.water
          background-color #3AB0E8
          background-image url('assets/img/types/14.png')

        &.dark
          background-color #6A7A9C
          background-image url('assets/img/types/15.png')

        &.rock
          background-color #C4AE70
          background-image url('assets/img/types/16.png')

        &.fighting
          background-color #F4648A
          background-image url('assets/img/types/17.png')

        &.fire
          background-color #FF9838
          background-image url('assets/img/types/18.png')

        &>p:first-child
          padding 10px 0px 10px 40px

        &>p:last-child
          padding 10px 30px
          background black
          color white
          transform skew(-30deg, 0) translate(20px, 0)

          &>*
            display table
            transform skew(30deg, 0) translate(-10px, 0)

        &:hover
          transform scale(1.1)
          box-shadow 0 0 0 3px black

@media screen and (max-width: 600px)
  .pokemon-bar
    transform none
    padding 10px
    margin 0 0 10px
    width 100%

    &.player-2
      transform none
      margin 0 0 10px

      &>div
        transform none

    &>div
      transform none
